---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Article from '../components/Article/Article.astro';

const { content } = Astro.props;
const { title, description, summary, publishDate, permalink } = content;

const serviceName = 'Climate Change';
---

<html lang={ content.lang || 'en' }>
    <head>
		<BaseHead title={title} description={description} permalink={permalink} />
	</head>

    <body>
        <Header serviceName={serviceName} alternativeAccent={false} />

        <Article {title} {summary} {publishDate}>
            <div class="govuk-container">
                <slot />
            </div>
        </Article>
    </body>
</html>