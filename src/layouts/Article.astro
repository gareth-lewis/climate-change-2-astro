---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Article from '../components/Article/Article.astro';

const { content } = Astro.props;
const { title, summary, publishDate, permalink } = content;

const serviceName = 'Climate Change';
---

<html lang={ content.lang || 'en' }>
    <head>
		<BaseHead title={title} description={summary} permalink={permalink} />
	</head>

    <body>
        <Header serviceName={serviceName} alternativeAccent={false} />

        <Article {title} {summary} {publishDate}>
            <div class="govuk-container">
                <main>
                    <slot />
                </main>
            </div>
        </Article>

        <Footer />
    </body>
</html>

<style>
    main {
        width: 66.67%;
    }
</style>