---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Dashboard from '../components/Dashboard.astro';
import Footer from '../components/Footer.astro';

const { content, description, permalink } = Astro.props;
const { title } = content;

const serviceName = 'Climate Change';
---

<html lang={ content.lang || 'en' }>
    <head>
		<BaseHead title={title} description={description} permalink={permalink} />
	</head>

    <body>
        <Header serviceName={serviceName} alternativeAccent={false} />

        <Dashboard {title} {description}>
            <div class="govuk-container">
                <main class="article-content">
                    <slot />
                </main>
            </div>
        </Dashboard>

        <Footer />
    </body>
</html>