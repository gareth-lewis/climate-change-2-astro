---
export interface Props {
    article: any
}

const { article } = Astro.props;
---

<article class="article-preview">
    <header>
        <p class="publish-date">{ article.publishDate }</p>
        <a href={ article.url }><h1 class="heading-m">{ article.title }</h1></a>
    </header>
    <p>{ article.summary }</p>
</article>

<style>
    article {
        margin-bottom: 40px;
    }

    a {
        font-family: 'GDS Transport Bold', sans-serif;
        font-weight: 700;
        text-decoration: none;
    }

    p {
        margin-top: 16px;
    }

    header p {
        margin: 0;
    }

    .publish-date {
        font-size: 16px;
        color: var(--color-secondary-text);
    }
</style>