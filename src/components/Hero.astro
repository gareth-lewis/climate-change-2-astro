---
export interface Props {
    heading: string;
    description: string;
    callToAction: string;
    heroImage: string;
    alt: string;
}

const { heading, description, callToAction, heroImage, alt } = Astro.props;
---

<section class="page-hero">
    <div class="govuk-container">
        <div class="hero-content">
            <div class="summary">
                <h1 class="heading-xl">{ heading }</h1>
                <p>{ description }</p>
                <button>{ callToAction }</button>
            </div>
            <div class="hero-image" style={"background-image: url(" + heroImage + ")"}></div>
        </div>
    </div>
</section>

<style>
    .page-hero {
        background-color: var(--color-brand);
        color: var(--color-white);
        max-height: 512px;
    }

    .hero-content {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 48px;
    }

    .summary {
        padding: 56px 0 96px;
    }

    .hero-image {
        background-size: cover;
        background-position: center center;
    }

    h1 {
        margin-bottom: 16px;
    }

    p {
        font-size: 24px;
        line-height: 32px;
        margin-bottom: 32px;
    }

    button {
        font-family: 'GDS Transport Bold', sans-serif;
        font-size: 24px;
        line-height: 24px;
        background-color: var(--color-white);
        border: 0;
        color: var(--color-brand);
        padding: 8px 16px;
    }
</style>