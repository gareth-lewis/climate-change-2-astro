<style>
    footer {
        background: var(--color-light-grey);
        border-top: 1px solid var(--color-border);
        padding: 40px 0;
        font-size: 16px;
        margin-top: 56px;
    }

    .footer-content {
        align-self: end;
    }

    .footer-content p {
        margin-bottom: 16px;
    }

    .footer-content p:last-child {
        margin: 0;
    }

    .footer-content a {
        color: var(--text-color);
    }

    .ogl-logo {
        height: 16px;
        position: relative;
        top: 2px;
        margin-right: 8px;
    }

    .footer-layout {
        margin: 0 auto;
        display: grid;
        grid-template-columns: auto 168px;
    }

    @media screen and (max-width: 768px) {
        .footer-layout {
            grid-template-columns: auto;
            gap: 40px;
        }
    }

    .crown {
        justify-self: center;
    }

    .crown a {
        display: block;
        text-align: center;
    }

    span {
        display: block;
        color: var(--color-text);
    }
</style>